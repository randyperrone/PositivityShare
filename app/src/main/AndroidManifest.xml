<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randyperrone.randyperrone.positivityshare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/positivity_share_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/positivity_share_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controller.NewUserScreenActivity" />
        <activity
            android:name=".Controller.EditProfileActivity"
            android:label="@string/title_activity_edit_profile" />
        <activity
            android:name=".Controller.BottomNavigationMainActivity"
            android:label="@string/app_name" />
        <activity android:name=".Controller.SendPositivityActivity" />
        <activity android:name=".Controller.ViewMessageActivity" />
        <activity android:name=".Controller.OnBoardingActivity"></activity>
    </application>

</manifest>